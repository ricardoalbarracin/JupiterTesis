@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
    ViewBag.Tittle = "Legalización";
    ViewBag.IconTittle = "fa fa-money";
}

<div id="@viewName">
    <!-- Scripts -->
    <script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
    <!-- Plantilla que se utilizará en la columna de acciones de la grilla -->
    <script id="actionTemplate" type="text/x-kendo-template">
        <div class='text-center'>
            <a class='btn btn-primary' data-modal="modal-xl" href='@Url.Action("InsFacturas", "SolicitudComision", new { area = "TRANS" })/#=data.Id#'>Facturar</a>            
        </div>
    </script>


    <div class="container-fluid ">

        <div class="card">
            <div class="card-header">
                <div class="h5 m-0">
                    Listado de comisiones por legalizar<label class="float-right mt-0 mb-0">                    
                    </label>
                </div>

            </div>
            <div class="card-body">
                @(Html.Kendo().Grid<ComisionColaborador>()
                                    .Name("grid")
                                    .Columns(columns =>
                                    {
                                        columns.Bound(p => p.Id).Hidden();
                                        columns.Bound(p => p.FechaInicio).Format("{0:dd/MM/yyyy}").Title("Fecha inicio").Width(100); ;
                                        columns.Bound(p => p.FechaFinalizacion).Format("{0:dd/MM/yyyy}").Title("Fecha final").Width(100); ;
                                        columns.Bound(p => p.NombreSolicitante).Title("Solicitante").Width(100);
                                        columns.Bound(p => p.NombreColaborador).Title("Colaborador").Width(100);
                                        columns.Bound(p => p.ValorComision).Format("{0:c0}").Title("Valor").Width(100);
                                        columns.Bound(p => p.Estado).Title("Estado").Width(100);
                                        columns.Bound(p => p.EstadoLegalizacion).Title("Legalización").Width(100);
                                        columns.Bound(c => c.Id).ClientTemplate("#=LegalizacionComision.actionTemplate(data)#").Title("Acciones").Filterable(false).Width(100);

                                    })
                                    .Pageable()
                                    .Sortable()
                                    .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                                    .Scrollable()
                                    .Events(events => events.DataBound("Site.handleModal"))
                                    .HtmlAttributes(new { style = "height:550px;" })
                                    .DataSource(dataSource => dataSource
                                        .Ajax()
                                        .Read(read => read.Action("GetListComisionesColaborador", "SolicitudComision"))
                                        .Events(e => e.Error("Site.handleError"))
                                    )
                )
            </div>
        </div>
    </div>
    <!-- Inicializadores -->
    <script>
        $(function () {
            @(viewName).init();
        });

    </script>
</div>

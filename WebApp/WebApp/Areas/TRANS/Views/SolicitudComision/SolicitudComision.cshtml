@{
    var viewName = System.IO.Path.GetFileNameWithoutExtension(Path);
    ViewBag.Tittle = "Comisiones";
    ViewBag.IconTittle = "fa fa-automobile";
}

<div id="@viewName">
    <!-- Scripts -->
    <script src="@Url.Content(App.Utils.Utils.GetJsFilePath(Path))"></script>
    <!-- Plantilla que se utilizará en la columna de acciones de la grilla -->
    <script id="actionTemplate" type="text/x-kendo-template">
        <div class='text-center'>
            <a class='btn btn-primary' data-modal="modal-xl" href='@Url.Action("UpdSolicitudComision", "SolicitudComision", new { area = "TRANS" })/#=data.Id#'>Editar</a>
        </div>
    </script>


    <div class="container-fluid ">

        <div class="card">
            <div class="card-header">
                <div class="h5 m-0">
                    Listado de comisiones <label class="float-right mt-0 mb-0">
                        @Html.ActionLink("Registrar", "InsComision", "SolicitudComision", new { area = "TRANS" }, new { @data_modal = "modal-xl", @class = "btn btn-primary float-right" })
                    </label>
                </div>

            </div>
            <div class="card-body">
                @(Html.Kendo().Grid<ComisionColaborador>()
                            .Name("grid")
                            .Columns(columns =>
                            {
                                columns.Bound(p => p.Id).Hidden();
                                columns.Bound(p => p.FechaInicio).Format("{0:dd/MM/yyyy}").Title("Fecha inicio").Width(100 ); ;
                                columns.Bound(p => p.FechaFinalizacion).Format("{0:dd/MM/yyyy}").Title("Fecha final").Width(100); ;
                                columns.Bound(p => p.NombreSolicitante).Title("Solicitante").Width(100);
                                columns.Bound(p => p.NombreColaborador).Title("Colaborador").Width(100);
                                columns.Bound(p => p.ValorComision).Format("{0:c0}").Title("Valor").Width(100);
                                columns.Bound(p => p.Estado).Title("Estado").Width(100);
                                columns.Bound(c => c.Id).ClientTemplate("#=SolicitudComision.actionTemplate(data)#").Title("Acciones").Filterable(false).Width(100);

                            })
                            .Pageable()
                            .Sortable()
                            .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                            .Scrollable()
                            .Events(events => events.DataBound("Site.handleModal"))
                            .HtmlAttributes(new { style = "height:550px;" })
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Read(read => read.Action("GetListComisiones", "SolicitudComision"))
                                .Events(e => e.Error("Site.handleError"))
                            )
                )
            </div>
        </div>
    </div>
    <!-- Inicializadores -->
    <script>
        $(function () {
            @(viewName).init();
        });

    </script>
</div>
